<?xml version="1.0" encoding="utf-8" ?>
<local:DuoPage xmlns:local="clr-namespace:HingeIt.Utils.MicrosoftDuoLibrary" 
               xmlns="http://xamarin.com/schemas/2014/forms"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:d="http://xamarin.com/schemas/2014/forms/design"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
               mc:Ignorable="d"
               x:Class="HingeIt.MainPage"
               BackgroundColor="#333333">

    <local:TwoPaneView>
        <!--#region Left pane -->
        <yummy:PancakeView BackgroundGradientStartColor="#333333"
                           BackgroundGradientEndColor="#666666" 
                           BackgroundGradientAngle="30">

            <Grid>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Label Grid.Row="0" 
                           Margin="10" 
                           HorizontalTextAlignment="Center" 
                           TextColor="#666666" 
                           Text="Open Source gamefication app written in Xamarin.Forms" />

                    <!--#region Error content -->
                    <StackLayout Grid.Row="1" 
                                 x:Name="ErrorStackLayout"
                                 VerticalOptions="CenterAndExpand" 
                                 HorizontalOptions="Center"
                                 Padding="60">

                        <Label FontSize="Large"
                               TextColor="#F2F2F2" 
                               HorizontalTextAlignment="Center"
                               Text="Sorry, no game for you" />

                        <Label x:Name="ErrorLabel" 
                               FontSize="Medium"
                               TextColor="PaleVioletRed"
                               HorizontalTextAlignment="Center"/>

                    </StackLayout>
                    <!--#endregion-->

                    <!--#region Game Content -->
                    <StackLayout Grid.Row="1" x:Name="GameStackLayout"
                         Margin="100" 
                         VerticalOptions="CenterAndExpand" 
                         HorizontalOptions="Center" 
                         Padding="10" >
                        <Label Text="Hinge It!"
                       TextColor="#F2F2F2"
                       FontSize="36" 
                       FontAttributes="Bold" />

                        <Label TextColor="#F2F2F2" 
                       FontSize="48"  
                       HorizontalTextAlignment="Center" 
                       Text="68°" />

                        <Button Text="Start" 
                        HeightRequest="60" 
                        HorizontalOptions="FillAndExpand" />

                    </StackLayout>
                    <!--#endregion-->

                    <!-- Footer -->
                    <Label Grid.Row="2"
                           Margin="10" 
                           HorizontalTextAlignment="Center" 
                           TextColor="#333333" 
                           Text="Proudly made by tscholze, visit tscholze.github.io for further information." />
                </Grid>
            </Grid>
        </yummy:PancakeView>
        <!--#endregion-->

        <!--#region Left pane -->
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <Label Text="Detail" />
        </StackLayout>
    </local:TwoPaneView>
    <!--#endregion-->
</local:DuoPage>
